<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.bsnes-mercury-performance"
		name="SNES / Super Famicom (bSNES Mercury Performance)"
		version="0.94.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.snes" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>SNES</platforms>
		<extensions>sfc|smc|bml</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
		<supports_mouse>false</supports_mouse>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">SNES / Super Famicom (bSNES Mercury Performance) v094 (Performance) 082f907</summary>
		<description>bSNES Mercury is a fork of Higan (originally called bSNES), notable for emulating the original hardware as accurately as possible through low-level, cycle-accurate emulation.

The &#34;Performance&#34; profile focusses more on execution speed than on accuracy.

http://byuu.org/

Supported files: .sfc, .smc, .bml</description>
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>